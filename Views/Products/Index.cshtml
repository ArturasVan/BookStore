@inject SignInManager<ApplicationUser> signInManager;
@model IEnumerable<BookStore.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product List</h1>

<p>
    @if (this.User.IsInRole("Admin")){<a asp-action="Create">Create New</a>}
</p>
<form asp-controller="Products" asp-action="Index">
    <p>
        Autor: <input type="text" name="id">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Pictures
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Info)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @foreach (var pic in item.Pictures)
                    {
                        <div class="zoom"> <img class="img" src="./image/@pic.Url" asp-append-version="true" width="120" height="100" /></div>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Info)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastUpdate)
                </td>
                <td>
                    @if(this.User.IsInRole("Admin")){<a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                        <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>}|
                    <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> 
                    <br />|
                    <a asp-controller="cart" asp-action="buy" asp-route-id="@item.ProductId">Buy Now</a>
                </td>
            </tr>
        }
    </tbody>
</table>
