@model BookStore.Models.Orders

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @using BookStore.Models;
}

<h1>Details</h1>

<div>
    <h4>Order details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Firstname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Firstname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lastname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lastname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryCity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryCity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryZip)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryZip)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
</div>

<table cellpadding="2" cellspacing="2" border="1">
    <tr>
        <th>ItemID</th>
        <th>Title</th>
        <th>Author</th>
        <th>Release Year</th>
        <th>Price</th>
        <th>Quantity</th>
    </tr>
    @foreach (var info in Model.OrderHasProducts)
    {
        <tr>
            <td>@info.ProductId</td>
            <td>@info.Title</td>
            <td>@info.Autor</td>
            <td>@info.ReleaseYear</td>
            <td>@info.Price</td>
            <td>@info.Quantity</td>
        </tr>}
</table>

<div>
    @if (this.User.IsInRole("Admin")) {<a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> }|
    <a asp-action="Index">Back to List</a>
</div>
